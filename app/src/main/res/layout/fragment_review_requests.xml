<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".reviewrequests.ReviewRequestsFragment">

    <ImageView
            android:id="@+id/tv_album_artwork"
            android:layout_width="203dp"
            android:layout_height="185dp"
            android:layout_marginTop="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

    <ImageView
            android:id="@+id/btn_add_song"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="64dp"
            android:background="@android:color/transparent"
            android:src="?android:attr/textCheckMark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_album_name"
            app:srcCompat="@android:drawable/ic_input_add" />

    <ImageView
            android:id="@+id/btn_decline"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginStart="64dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_delete"
            app:layout_constraintBottom_toBottomOf="@+id/btn_add_song"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_add_song"
            app:layout_constraintVertical_bias="0.0" />

    <TextView
            android:id="@+id/tv_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:ellipsize="marquee"
            app:layout_constraintEnd_toEndOf="@+id/tv_album_artwork"
            app:layout_constraintStart_toStartOf="@+id/tv_album_artwork"
            app:layout_constraintTop_toBottomOf="@+id/tv_album_artwork"
            tools:text="Dope Song" />

    <TextView
            android:id="@+id/tv_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_album_artwork"
            app:layout_constraintStart_toStartOf="@+id/tv_album_artwork"
            app:layout_constraintTop_toBottomOf="@+id/tv_song_name"
            tools:text="The Artist" />

    <TextView
            android:id="@+id/tv_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_album_artwork"
            app:layout_constraintStart_toStartOf="@+id/tv_album_artwork"
            app:layout_constraintTop_toBottomOf="@+id/tv_artist_name"
            tools:text="The Album" />
</androidx.constraintlayout.widget.ConstraintLayout>